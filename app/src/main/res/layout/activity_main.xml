<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/output"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00BCD4"
        android:paddingRight="15dp"
        android:gravity="right|center_vertical"
        android:text="0"
        android:textSize="50dp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_weight="7"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="3"
            android:weightSum="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#03A9F4"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/btn1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/btn2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/btn3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#ffffff"/>

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
               >
                <TextView
                    android:id="@+id/btn4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/btn5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/btn6"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#ffffff"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >
                <TextView
                    android:id="@+id/btn7"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:gravity="center"

                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/btn8"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/btn9"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#ffffff"/>

            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:weightSum="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clear"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FF9800"
            android:text="CA"
            android:textSize="60dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"/>

            <TextView
                android:id="@+id/btnplus"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#FF9800"
                android:text="+"
                android:textSize="60dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="0"
                android:textColor="#070000"
                android:textSize="60dp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>



</LinearLayout>